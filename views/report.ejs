<%- include("partials/header.ejs") %>
    <div class="w-75 h-25 m-auto border rounded p-4 mt-4 mb-4 add-project">
      <div class="border-bottom mb-3">
        <h4 class="text-white">Report an Issue</h4>
      </div>
      <form action="/reportNewIssue" method="post" id="myForm">
        <div class="row mb-3 mt-3">
          <div class="col-6">
            <label for="Name" class="form-label text-white">Your Name</label>
            <input type="text" class="form-control" id="Name" name="name" required="">
          </div>
          <div class="col-6">
            <label for="state" class="form-label text-white">State</label>
            <select name="state" id="stateInput" class="form-select">
                <% stateList.forEach(function(state){%>
                <option value=<%= state %>><%= state %></option>
                <%});%>
              </select>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-6">
            <label for="govtDept" class="form-label text-white">Department</label>
            <select name="dept" id="deptInput" class="form-select">
                <% govtDept.forEach(function(dept){%>
                <option value=<%= dept %>><%= dept %></option>
                <%});%>
              </select>
          </div>
          <div class="col-6">
            <label for="mail" class="form-label text-white">Email </label>
            <input type="email" class="form-control" id="email" placeholder="you@example.com" required="" name="mail">
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-6">
            <label for="subject" class="form-label text-white">Subject <span class="text-body-secondary">(Mention the Subject of your Grievance)</span></label>
            <input type="text" class="form-control" id="sub" placeholder="eg: Regarding potholes on roads in my area" name="subject">
          </div>
          <div class="col-6">
            <label for="issueDesc" class="form-label text-white">Issue Description</label>
            <input type="text" class="form-control" id="issueDesc" placeholder="Describe issue you are facing" name="issueDesc">
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-6">
            <button class="btn btn-primary" type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>